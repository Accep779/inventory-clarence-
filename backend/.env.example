# Application
DEBUG=true
HOST=http://localhost:8000
FRONTEND_URL=http://localhost:3000
SECRET_KEY=your-secret-key-here-change-in-production

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/inventory_agent

# Redis
REDIS_URL=redis://localhost:6379

# Shopify OAuth (Get from Shopify Partners Dashboard)
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_SCOPES=read_products,read_orders,read_customers,write_products

# LLM Providers (at least one required)
ANTHROPIC_API_KEY=your-anthropic-api-key
OPENAI_API_KEY=your-openai-api-key
GOOGLE_API_KEY=your-google-api-key

# Token Vault Security (REQUIRED in production)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=
USE_TOKEN_VAULT=true

# Error Monitoring (Recommended)
SENTRY_DSN=

# Optional: Klaviyo (Email)
KLAVIYO_API_KEY=

# Optional: Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

